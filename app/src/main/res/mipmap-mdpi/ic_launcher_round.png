                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="#6E7071"
                android:text="AC"
                android:textSize="40sp" />

            <Button
                android:id="@+id/buttonPlusMinus"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="#6E7071"
                android:text="+/-"
                android:textSize="40sp" />

            <Button
                android:id="@+id/buttonPercent"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:backgroundTint="#6E7071"
                android:text="%"
                android:textSize="40sp" />

            <Button
                android:id="@+id/buttonDivisor"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="#F5A01A"
                android:text="/"
                android:textSize="40sp" />
